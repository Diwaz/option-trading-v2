generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @default(uuid()) @id
  email String @unique
  trades Trade[] 

}

model Trade {
  tradeId String @default(uuid()) @id
  symbol String 
  buyPrice String
  pnl Int
  sellPrice Int
  userId String
  user User @relation(fields: [userId], references: [id])

}